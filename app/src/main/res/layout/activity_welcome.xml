<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WelcomeActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="265dp"
        android:layout_height="54dp"
        android:text="@string/slogan"
        android:textAlignment="center"
        android:textColor="@color/md_theme_light_onBackground"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="301dp"
        android:layout_height="225dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.828"
        app:srcCompat="@drawable/makeup_illust" />


    <LinearLayout
        android:id="@+id/loginGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="643dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@string/login_text_desc"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/loginArrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="15dp"
            android:contentDescription="@string/login_arrow"
            app:srcCompat="@drawable/arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signupGroup"
        android:layout_width="175dp"
        android:layout_height="46dp"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="573dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/create_new_account"
            android:textColor="@color/white"
            android:textColorLink="@color/black" />

        <ImageView
            android:id="@+id/signupArrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="75dp"
            android:contentDescription="@string/signup_arrow"
            app:srcCompat="@drawable/invert_arrow" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>